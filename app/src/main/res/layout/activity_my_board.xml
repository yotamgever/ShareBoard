<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    android:paddingBottom="0dp"
    tools:context="finalproject.shareboard.MyBoardActivity">
    <LinearLayout android:id="@+id/llBoardBackground"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="0px"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:padding="0dp"
        android:layout_margin="0px"
        android:layout_marginLeft="0px">
        <TextView android:id="@+id/tvEmptyBoardText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/empty_board_text"
            android:textSize="20dp"
            android:visibility="invisible"/>
        <LinearLayout
            android:layout_width="220dp"
            android:layout_height="150dp"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="10dp">
            <Button android:id="@+id/btnLargeNote1"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@android:color/transparent"
                android:visibility="invisible"
                android:clickable="false"/>

            </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginLeft="70dp"
                android:layout_marginTop="10dp">
                <Button android:id="@+id/btnSmallNote1"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="@android:color/transparent"
                    android:visibility="invisible"
                    android:clickable="false"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="70dp">
                <Button android:id="@+id/btnSmallNote2"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="@android:color/transparent"
                    android:visibility="invisible"
                    android:clickable="false"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="220dp"
            android:layout_height="150dp"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="30dp">
            <Button android:id="@+id/btnLargeNote2"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@android:color/transparent"
                android:visibility="invisible"
                android:clickable="false"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>

